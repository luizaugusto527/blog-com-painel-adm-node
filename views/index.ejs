<%- include ('./partials/header.ejs');%>
    <%- include ('./partials/homenavbar.ejs');%>

        <body>


            <div class="container">
                <div class="p-5 mb-4 bg-light rounded-3 mt-4">
                    <div class="container-fluid py-5">
                        <h1 class="display-5 fw-bold">Bem vindo</h1>
                        <p class="col-md-8 fs-4">Um blog feito com node espero que gostem :)</p>
                        <button class="btn btn-primary btn-lg" type="button">Leia mais</button>
                    </div>
                </div>
                <% articles.forEach(article=> {%>
                    <div class="card mt-5">
                        <div class="card-header">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a class="btn btn-success" href="/<%= article.slug %>">Ver artigo</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </body>

        <%- include ('./partials/footer.ejs');%>