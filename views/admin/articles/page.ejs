<%- include ('../../partials/header.ejs');%>
    <%- include ('../../partials/homenavbar.ejs');%>

        <body>
            <div class="container">
                <% result.article.rows.forEach(article=> {%>
                    <div class="card mt-5">
                        <div class="card-header">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a class="btn btn-success" href="/<%= article.slug %>">Ver artigo</a>
                        </div>
                    </div>
                    <% }) %>

                        <div class="row my-3">
                            <div class="col col-12">
                                <% if(result.page> 2) {%>
                                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>">
                                        <<< Prev</a>
                                            <% }else if(result.page==2) {%>
                                                <a style="float: left;" href="/>">
                                                    <<< Prev </a>
                                                        <% } %>
                                                            <% if(result.next) {%>
                                                                <a style="float: right;"
                                                                    href="/articles/page/<%= result.page + 1 %>">Next
                                                                    >>></a>
                                                                <% } %>
                            </div>
                        </div>
            </div>
        </body>

        <%- include ('../../partials/footer.ejs');%>